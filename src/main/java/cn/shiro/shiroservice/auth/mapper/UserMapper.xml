<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.shiro.shiroservice.auth.mapper.UserMapper">


    <resultMap id="BaseResultMap" type="cn.shiro.shiroservice.auth.pojo.User">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="username" property="userName" jdbcType="VARCHAR"/>
        <result column="password" property="passWord" jdbcType="VARCHAR"/>
        <result column="sex" property="sex" jdbcType="VARCHAR" javaType="cn.shiro.shiroservice.common.enums.SexEnum"/>
        <result column="session_id" property="sessionId" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="base_insert">
        id,username,password,name,salt,sex,age,phone,state,is_delete,session_id
    </sql>

    <insert id="save">
        insert into sys_user (
        <trim suffixOverrides=",">
            id,username,password,name,salt,sex,age,phone,
            <if test="data.state!=null and data.state!=''">
                state,
            </if>
            <if test="data.isDelete!=null and data.isDelete!=''">
                is_delete,
            </if>
            <if test="data.sessionId!=null and data.sessionId!=''">
                session_id
            </if>
        </trim>
        )
        values (
        <!--suffixOverrides取出最后出现的字符串 -->
        <trim suffixOverrides=",">
            #{data.id},#{data.userName},#{data.passWord},#{data.name},#{data.salt},#{data.sex},
            #{data.age},#{data.phone},
            <if test="data.state!=null and data.state!=''">
                #{data.state},
            </if>
            <if test="data.isDelete!=null and data.isDelete!=''">
                #{data.isDelete},
            </if>
            <if test="data.sessionId!=null and data.sessionId!=''">
                #{data.sessionId}
            </if>
        </trim>
        )
    </insert>
    <select id="queryByUserName" resultMap="BaseResultMap">
        select username, password, sex, session_id
        from sys_user
        where username = #{userName}

    </select>
</mapper>